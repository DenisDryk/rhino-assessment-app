{
  "name": "@packages/shared-ui",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./components": "./dist/components/index.js",
    "./utils": "./dist/utils/index.js"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles/styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "dev:styles": "tailwindcss -i ./src/styles/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src",
    "test": "vitest run",
    "dev:test": "vitest",
    "coverage": "vitest run --coverage",
    "dev:storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "embla-carousel-react": "^8.6.0",
    "react-hook-form": "^7.66.0"
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:^",
    "@packages/typescript-config": "workspace:^",
    "@storybook/react-vite": "^10.0.3",
    "@tailwindcss/cli": "^4.1.5",
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.38.0",
    "eslint-plugin-storybook": "^10.0.3",
    "jsdom": "^27.1.0",
    "lucide-react": "^0.552.0",
    "storybook": "^10.0.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.2",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}
